<Window x:Class="Module3.View.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module3.View"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800"
        MinHeight="450"
        MinWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <TextBox Width="300"
                     Height="40"
                     VerticalContentAlignment="Center"
                     FontSize="18"
                     Margin="0 0 0 20"
                     x:Name="SurnameTextBox"/>

            <TextBox Width="300"
                     Height="40"
                     VerticalContentAlignment="Center"
                     FontSize="18"
                     Margin="0 0 0 20"
                     x:Name="NameTextBox"/>

            <TextBox Width="300"
                     Height="40"
                     VerticalContentAlignment="Center"
                     FontSize="18"
                     Margin="0 0 0 20"
                     x:Name="LoginTextBox"/>
            
            <PasswordBox Width="300"
                     Height="40"
                     VerticalContentAlignment="Center"
                     FontSize="18"
                     Margin="0 0 0 20"
                     x:Name="PasswordTextBox"/>

            <ComboBox x:Name="RoleComboBox"
                      SelectedIndex="0">
                <ComboBoxItem>Пользователь</ComboBoxItem>
                <ComboBoxItem>Администратор</ComboBoxItem>
            </ComboBox>

            <Button Content="Зарегистрировать"
                    Width="200"
                    Height="40"
                    Margin="0 50 0 0"
                    Click="RigestrateButtonClick"/>

        </StackPanel>
    </Grid>
</Window>
